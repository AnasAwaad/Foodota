@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
<header class="container ">
	<div class="d-flex justify-content-between">
		<div>
			<a class="logo" asp-controller="Home" asp-action="Index">
				<img src="~/assets/images/logo.png" style="height:60px;" />
			</a>
		</div>
		<div class="toggleMenu" onclick="toggleMenu();"></div>

		<div class="navigation ">
			<ul class="primary-list d-flex ">
				<li>
					<a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
				</li>
				@if (User.IsInRole(AppRoles.Admin))
				{
					<li>
						<a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a>
					</li>
				}
			</ul>
			<ul class="d-flex ms-0 align-items-center m-0">
				<li class="icon-cart js-open-cart">
					<i class="bi bi-bag-check"></i>
					<span id="cart-count">0</span>
				</li>
				@if (SignInManager.IsSignedIn(User))
				{
					
					<li >
						<a class="nav-link text-dark"  title="Manage" id="username">Hello @User.Identity?.Name!</a>
					</li>
					<li >
						<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
							<button type="submit" class="nav-link  btn-link text-dark logout-btn">Logout</button>
						</form>
					</li>
					
				}
				else
				{
					<li>
						<a asp-area="Identity" asp-page="/Account/Login">Login</a>
					</li>
					<li>
						<a asp-area="Identity" asp-page="/Account/Register">Register</a>
					</li>

				}

			</ul>

		</div>
	</div>
</header>
