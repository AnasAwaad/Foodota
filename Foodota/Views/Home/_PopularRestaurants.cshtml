@using Foodota.Areas.Admin.Models
@model IEnumerable<Restaurant>

<section class="restaurant-section py-120px ">
	<div class="container">
		<div class="row">
			<div class="global-header col-12 m-auto text-center mb-5">
				<div class="header-title text-">Top Restaurants</div>
				<h3 class="header-content">Papular Restaurant</h3>
				<div class="bottom-dots  clearfix">
					<span class="dot line-dot"></span>
					<span class="dot"></span>
					<span class="dot"></span>
					<span class="dot"></span>
				</div>
			</div>
			@foreach (var restaurant in Model)
			{
				<div class="align-self-normal col-12 col-sm-12 col-md-6 col-lg-6 col-xl-4 mb-4">
					<div class="card h-100">
						<img src="@restaurant.ImagePath" class="card-img-top" alt="...">
						<div class="card-body d-flex flex-column">
							<h5 class="card-title mb-4 fs-4 ">@restaurant.Name</h5>
							<div class="card-categories d-flex gap-2 flex-wrap mb-3">
								@if (!restaurant.RestaurantCategories.Any())
								{
									<span class="text-danger">no categories available</span>
								}
								else
								{
									@foreach (var category in restaurant.RestaurantCategories)
									{
										<a href="#" class="px-3 py-2 bg-light text-black rounded-1">@category.Category?.Name</a>
									}
								}

							</div>
							<div class="card-footer bg-white p-0 pt-3 mt-auto">
								<div class="d-flex gap-3">
									<a href="#">
										<img src="@restaurant.LogoPath" width="50" />
									</a>
									<div>
										<div>
											<i class="bi bi-clock-fill" style="color:green;"></i>
											<span class="text-danger">12:01 am - 11:59 pm</span>
										</div>
										<div>
											<i class="bi bi-geo-alt-fill" style="color:red;"></i>
											<span class="text-dark">Main Boulevard, , Lahore,</span>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

			}


		</div>

	</div>
</section>